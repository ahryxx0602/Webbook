<%- include("../partials/header", { title: "Đăng ký" }) %>

<section class="vh-100">
  <div class="container h-100 d-flex justify-content-center align-items-center">
    <div class="row w-100">
      <div class="col-md-6 offset-md-3">
        <div class="card shadow p-4">
          <h3 class="text-center mb-4">Tạo tài khoản</h3>
          <form action="/register" method="POST">
            <div class="form-outline mb-4">
              <input type="text" name="firstName" class="form-control form-control-lg" placeholder="Họ" required />
              <label class="form-label">Họ</label>
            </div>
            <div class="form-outline mb-4">
              <input type="text" name="lastName" class="form-control form-control-lg" placeholder="Tên" required />
              <label class="form-label">Tên</label>
            </div>
            <div class="form-outline mb-4">
              <input type="email" name="email" class="form-control form-control-lg" placeholder="Email" required />
              <label class="form-label">Email</label>
            </div>
            <div class="form-outline mb-4">
              <input type="password" name="password" class="form-control form-control-lg" placeholder="Mật khẩu (tối thiểu 6 ký tự)" minlength="6" required />
              <label class="form-label">Mật khẩu</label>
            </div>
            <div class="form-outline mb-4">
              <input type="password" name="confirmPassword" class="form-control form-control-lg" placeholder="Xác nhận mật khẩu" minlength="6" required />
              <label class="form-label">Xác nhận mật khẩu</label>
            </div>
            <div class="text-center">
              <button type="submit" class="btn btn-success btn-lg w-100">Đăng ký</button>
            </div>
            <p class="small fw-bold mt-2 pt-1 mb-0 text-center">Đã có tài khoản? <a href="/login" class="link-danger">Đăng nhập</a></p>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>

<%- include("../partials/footer") %>