<%- include("../partials/header", { title: "Đăng nhập", styles:
["/css/login.css"] }) %>

<section class="min-vh-100 d-flex flex-column">
  <main
    class="flex-grow-1 d-flex justify-content-center align-items-center py-5"
  >
    <div class="container">
      <div class="row justify-content-center align-items-center">
        <!-- Hình minh họa -->
        <div class="col-md-6 d-none d-md-block">
          <img
            src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.webp"
            class="img-fluid"
            alt="Hình minh họa"
          />
        </div>

        <!-- Form -->
        <div class="col-md-6 col-lg-5">
          <div class="card shadow p-4">
            <h3 class="text-center mb-4">Đăng nhập</h3>

            <!-- FLASH -->
            <div class="mb-3"><%- include("../partials/alert") %></div>

            <form action="/login" method="POST" novalidate>
              <!-- Email -->
              <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  class="form-control form-control-lg"
                  placeholder="Nhập email"
                />
              </div>

              <!-- Password -->
              <div class="mb-3">
                <label for="password" class="form-label">Mật khẩu</label>
                <input
                  type="password"
                  id="password"
                  name="password"
                  class="form-control form-control-lg"
                  placeholder="Nhập mật khẩu"
                />
              </div>

              <!-- Remember + Forgot -->
              <div
                class="d-flex justify-content-between align-items-center mb-3"
              >
                <div class="form-check">
                  <input
                    class="form-check-input me-2"
                    type="checkbox"
                    id="rememberMe"
                    name="remember"
                    value="1"
                  />
                  <label class="form-check-label" for="rememberMe"
                    >Ghi nhớ</label
                  >
                </div>
                <a href="/forgot-password" class="text-body">Quên mật khẩu?</a>
              </div>

              <!-- Submit -->
              <div class="d-grid mb-3">
                <button type="submit" class="btn btn-primary btn-lg">
                  Đăng nhập
                </button>
              </div>

              <!-- Divider -->
              <div class="divider d-flex align-items-center my-3">
                <hr class="flex-grow-1" />
                <span class="mx-2 text-muted">Hoặc</span>
                <hr class="flex-grow-1" />
              </div>

              <!-- Social login -->
              <div class="d-flex justify-content-center gap-2">
                <button
                  type="button"
                  class="btn btn-outline-primary btn-floating"
                >
                  <i class="fab fa-facebook-f"></i>
                </button>
                <button type="button" class="btn btn-outline-info btn-floating">
                  <i class="fab fa-twitter"></i>
                </button>
                <button
                  type="button"
                  class="btn btn-outline-primary btn-floating"
                >
                  <i class="fab fa-linkedin-in"></i>
                </button>
              </div>

              <!-- Link to register -->
              <p class="small fw-bold mt-4 mb-0 text-center">
                Chưa có tài khoản?
                <a href="/register" class="link-danger">Đăng ký</a>
              </p>
            </form>
          </div>
        </div>
      </div>
    </div>
  </main>

  <!-- footer -->
  <footer
    class="mt-auto d-flex flex-column flex-md-row text-center text-md-start justify-content-between py-3 px-4 px-xl-5 bg-primary"
  >
    <div class="text-white mb-2 mb-md-0">
      © 2025 EduBook. All rights reserved.
    </div>
    <div>
      <a href="#!" class="text-white me-4"><i class="fab fa-facebook-f"></i></a>
      <a href="#!" class="text-white me-4"><i class="fab fa-twitter"></i></a>
      <a href="#!" class="text-white me-4"><i class="fab fa-google"></i></a>
      <a href="#!" class="text-white"><i class="fab fa-linkedin-in"></i></a>
    </div>
  </footer>
</section>
